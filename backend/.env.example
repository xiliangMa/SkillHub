# SkillHub Configuration
SKILLHUB_DATABASE_URL=postgresql://skillhub:skillhub@postgres:5432/skillhub
SKILLHUB_REDIS_URL=redis://redis:6379

# App Config
SKILLHUB_APP_HOST=0.0.0.0
SKILLHUB_APP_PORT=8080
SKILLHUB_APP_ENV=development
SKILLHUB_APP_CORS_ORIGINS=http://localhost:3000

# GitHub API
SKILLHUB_GITHUB_TOKEN=your-github-token-here

# JWT
SKILLHUB_JWT_SECRET=your-super-secret-jwt-key-change-in-production
SKILLHUB_JWT_EXPIRY_HOURS=24
SKILLHUB_JWT_ISSUER=skillhub

# Payment (Test Mode)
SKILLHUB_PAYMENT_WECHAT_APPID=your-wechat-appid
SKILLHUB_PAYMENT_WECHAT_MCH_ID=your-mch-id
SKILLHUB_PAYMENT_WECHAT_KEY=your-wechat-key
SKILLHUB_PAYMENT_WECHAT_NOTIFY_URL=http://localhost:3000/api/webhooks/wechat
SKILLHUB_PAYMENT_WECHAT_SANDBOX=true

SKILLHUB_PAYMENT_ALIPAY_APPID=your-alipay-appid
SKILLHUB_PAYMENT_ALIPAY_PRIVATE_KEY=your-alipay-private-key
SKILLHUB_PAYMENT_ALIPAY_PUBLIC_KEY=your-alipay-public-key
SKILLHUB_PAYMENT_ALIPAY_NOTIFY_URL=http://localhost:3000/api/webhooks/alipay
SKILLHUB_PAYMENT_ALIPAY_SANDBOX=true
